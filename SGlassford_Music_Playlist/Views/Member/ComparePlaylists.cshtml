@model SGlassford_Music_Playlist.Models.ViewModels.ComparePlaylistViewModel
@{
    ViewBag.Title = "ComparePlaylists";
}

<div class="text-center">
    <h4>@ViewBag.Message</h4>
    <button class="button-74" onclick="location.href='@Url.Action("MergePlaylist","Member",new { id=Model.SelectedPlaylist.PlaylistId, secondId = Model.SecondPlaylist.PlaylistId })'" role="button"> Merge Playlists</button>
</div>

<hr />

<h3>@Model.SelectedPlaylist.PlaylistName's Unique Songs</h3>
<table class="table table-sm ">
    <thead>
        <tr class="table-primary">
            <th>Song Name</th>
            <th>Artist</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.SelectedPlaylistUniqueSongs.Any())
        {
            <tr class="table-danger">
                <td>PLAYLIST HAS NO UNIQUE SONGS</td>
            </tr>
        }
        @foreach (var song in Model.SelectedPlaylistUniqueSongs)
        {
            <tr>
                <td>@song.Name</td>
                <td>@song.Artist</td>
            </tr>
        }
    </tbody>
</table>

<div class="divider"></div>
<h3>@Model.SecondPlaylist.PlaylistName's Unique Songs</h3>
<table class="table table-sm">
    <thead>
        <tr class="table-warning">
            <th>Song Name</th>
            <th>Artist</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.SecondPlaylistUniqueSongs.Any())
        {
            <tr class="table-danger">
                <td>PLAYLIST HAS NO UNIQUE SONGS</td>
            </tr>
        }
        @foreach (var song in Model.SecondPlaylistUniqueSongs)
        {
            <tr>
                <td>@song.Name</td>
                <td>@song.Artist</td>
            </tr>
        }
    </tbody>
</table>

<div class="divider"></div>

<h3>Shared Songs</h3>
<table class="table table-sm">
    <thead>
        <tr class="table-success">
            <th>Song Name</th>
            <th>Artist</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.SharedSongs.Any())
        {
            <tr class="table-danger">
                <td>PLAYLISTS HAVE NO SHARED SONGS</td>
            </tr>
        }
        @foreach (var song in Model.SharedSongs)
        {
            <tr>
                <td>@song.Name</td>
                <td>@song.Artist</td>
            </tr>
        }
    </tbody>
</table>





